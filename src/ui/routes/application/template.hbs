<h2 id="title">Companies List</h2>

Selected: {{selectedBook.name}}

<div class="table table--4cols">
  <div class="table-row">
    <div class="table-cell header sortable" {{action 'sortBooks' 'name'}}>Name</div>
    <div class="table-cell header sortable" {{action 'sortBooks' 'author'}}>Author</div>
    <div class="table-cell header sortable" {{action 'sortBooks' 'publicationYear'}}>Publication Year</div>
    <div class="table-cell header sortable" {{action 'sortBooks' 'pages'}}>Pages</div>
  </div>

  {{#each sortedBooks as |book|}}
    <div class="table-row" {{action selectBook book}}>
      <div class="table-cell">{{book.name}}</div>
      <div class="table-cell">{{book.author}}</div>
      <div class="table-cell">{{book.publicationYear}}</div>
      <div class="table-cell">{{book.pages}}</div>
    </div>
  {{/each}}
</div>
{{outlet}}
